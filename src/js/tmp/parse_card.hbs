<li class="card-modal__item">
<h2 class="card-modal__title">{{name}}</h2>
<img class="card-modal__image" src="{{backdrop_path}}" alt="{{name}}+' moviepic'"/>
<p class="card-modal__rating">Vote/Votes</p><span class="card-modal__rating-result">{{vote_average}}</span>
<p class="card-modal__popularity">Popularity</p><span class="card-modal__popularity-result">{{vote_average}}</span>
<p class="card-modal__origin-title">Original Title</p><span class="card-modal__origin-title-result">{{name}}</span>
<p class="card-modal__genres">Genre</p>
    {{#each genres}}
       <span class="card-modal__genres-item">{{this}}</span>
    {{/each}}
<p class="card-modal__poster">{{poster_path}}</p>

<button class="card-modal__button-add" type="button">ADD TO WATCHED</button>
<button class="card-modal__button-queue" type="button">ADD TO QUEUE</button>
</li>


