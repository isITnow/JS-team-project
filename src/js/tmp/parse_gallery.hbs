



{{#each this}}
<li class="gallery__item">
    <a class="gallery__link" href="#">
<img class="gallery__image" src="{{backdrop_path}}" alt="{{original_title}}"/>
<h2 class="gallery__title">{{title}}</h2>
    {{#each genres}}
    {{!-- {{#if genres.length > 3}}<span class="gallery__other">{{genres[0]}}, {{genres[1]}}, Other</span> --}}
    {{#if @last}}<span class="gallery__genres-item">{{this}}</span>
    {{else}}<span class="gallery__genres-item">{{this}},</span>
    {{/if}}
    {{/each}}
    <span>/</span>
    <p class="gallery__release">{{release_date}}</p>
    <span class="gallery__rating">{{vote_average}}</span>
    </a>
</li>
{{/each}}